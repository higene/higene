<%= title @workspace.name %>

<div class="col-sm-1"></div>
<div class="col-sm-7">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="col-sm-12">
        <div class="row">
          <h3 class="text-center"><strong><%= @workspace.name %></strong></h3>
          <hr>
        </div>
        <div class="row">
          <%= @workspace.description %>
        </div>
        <% if @workspace.members.find_by(user: current_user).role == "owner" %>
          <div class="row">
            <hr>
            <div class="text-right">
              <%= link_to "Edit", edit_workspace_path, class: "btn btn-info", role: "button" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
<div class="col-sm-3">
  <% @workspace.members.each do |member| %>
    <div class="row">
      <div class="col-sm-12">
      <p data-toggle="tooltip" data-placement="bottom" data-title="<%= member.user.email %>">
        <%= "#{member.user.username} (#{member.role})" %>
      </p>
      </div>
    </div>
  <% end %>
  <div class="row">
    <form id="add-member-form">
      <div class="form-group">
        <label class="sr-only" for="add-member">add member: name / email</label>
        <div class="input-group">
          <div class="input-group-addon"><%= fa_icon("user-plus") %></div>
          <input type="text" class="form-control" id="add-member" placeholder="name / email">
        </div>
      </div>
    </form>
  </div>
</div>
<div class="col-sm-1"></div>
