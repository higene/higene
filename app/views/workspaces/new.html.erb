<%= title "Create new workspace" %>

<div class="col-sm-5 center">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title text-center">Create new workspace</h3>
    </div>
    <div class="panel-body">
      <%= form_for @workspace, class: "form-inline" do |f| %>
        <div class="form-group">
          <%= f.label :name, "Name", class: "sr-only" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
          <%=form_field_error(@workspace, :name) %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Description", class: "sr-only" %>
          <%= f.text_area :description, class: "form-control", placeholder: "Description (optional)", rows: "10" %>
        </div>
        <div class="pull-right">
          <%= f.submit "Create", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
