<%= title("Upload â€§ #{@current_workspace.name}") %>

<div class="col-sm-5 center">
  <div class="row">
    <h2 class="text-center">Import Your Data</h2>
  </div>
  <div class="row"><hr></div>
  <div class="row">
    <%= form_tag :workspace_sequences, multipart: true, class: "form-horizontal" do %>
      <div class="form-group">
        <label for="select_workspace" class="col-sm-4 control-label text-capitalize">
          workspace
        </label>
        <div class="col-sm-8">
          <select id="select_workspace" class="form-control">
            <% @workspaces.each do |workspace| %>
              <% if workspace.id == @current_workspace.id %>
                <%= content_tag :option, workspace.name, value: workspace.id, selected: true %>
              <% else %>
                <%= content_tag :option, workspace.name, value: workspace.id %>
              <% end %>
            <% end %>
          </select>
        </div>
      </div>

      <div class="form-group">
        <label for="format" class="col-sm-4 control-label text-capitalize">
          file format
        </label>
        <div class="col-sm-8">
          <select id="format" name="format" class="form-control">
            <% @formats.each do |value, text| %>
              <%= content_tag :option, text, value: value %>
            <% end %>
          </select>
        </div>
      </div>

      <div id="input_condition_name" class="form-group">
        <label for="condition_name" class="col-sm-4 control-label text-capitalize">
          condition name
        </label>
        <div class="col-sm-8">
          <input type="text" name="condition_name" class="form-control" id="codition_name">
        </div>
      </div>

      <div class="form-group">
        <label for="file" class="col-sm-4 control-label">File</label>
        <div class="col-sm-8">
          <input type="file" name="file">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <button type="submit" class="btn btn-info">Import</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
